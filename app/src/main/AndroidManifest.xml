<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mtz.mg.br.projetoradio">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE"/>

    <uses-sdk android:minSdkVersion="9"
        android:targetSdkVersion="20"
        android:maxSdkVersion="21" />



    <application
        android:allowBackup="true"
        android:icon="@drawable/logonovo"
        android:label="@string/app_name"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">




        <activity android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" android:screenOrientation="portrait">
        </activity>
        <activity android:name=".Radio2" android:screenOrientation="portrait" />
        <activity android:name=".Radio3" android:screenOrientation="portrait" />
        <activity android:name=".Radio4" android:screenOrientation="portrait" />
        <activity android:name=".Radio5" android:screenOrientation="portrait" />
        <activity android:name=".Radio6" android:screenOrientation="portrait" />
        <activity android:name=".Radio7" android:screenOrientation="portrait" />
        <activity android:name=".Radio8" android:screenOrientation="portrait" />



    </application>

</manifest>